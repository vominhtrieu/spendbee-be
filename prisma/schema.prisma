generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  installationId  String   @unique
  lastAccess    DateTime @default(now()) @updatedAt
  createdAt     DateTime @default(now())

  @@map("users")
}

model LLMUsage {
  id        String   @id @default(uuid())
  userId    String?
  modelName String
  success   Boolean
  duration  Int?
  createdAt DateTime @default(now())

  @@map("llm_usage")
}

model Interaction {
  id        String            @id @default(uuid())
  userId    String
  type      InteractionType
  createdAt DateTime          @default(now())

  @@map("interactions")
}

enum InteractionType {
  ping
  llm_usage
}
